# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                  controllers.Application.index
GET         /product                                           controllers.TaskList.productDetails(prodName, prodNum: Int)
GET         /product/:prodName/:prodNum                        controllers.TaskList.productDetails(prodName, prodNum: Int)
GET         /productRE/$prodName<[a-z]{2}\d\d>/:prodNum        controllers.TaskList.productDetails(prodName, prodNum: Int)
GET         /taskList                                          controllers.TaskList.taskList
GET         /login                                             controllers.UserService.login
GET         /logout                                            controllers.UserService.logout
GET         /validateGet                                       controllers.UserService.validateGet(login, password)

+nocsrf
POST        /validatePost                                      controllers.UserService.validatePost
+nocsrf
POST        /register                                          controllers.UserService.register

# Prefix must match `play.assets.urlPrefix`
GET         /assets/*file                                      controllers.Assets.at(file)
GET         /versionedAssets/*file                             controllers.Assets.versioned(path="/public", file: Asset)
